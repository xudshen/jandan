<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="picItem"
            type="info.xudshen.jandan.domain.model.PicItem" />

        <import type="java.util.List" />

        <variable
            name="urls"
            type="List&lt;String>" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <info.xudshen.jandan.view.component.ProgressImageView
            style="@style/ProgressImageViewStyle"
            app:picFull="@{urls[0]}"
            app:placeHolder="@{@drawable/post_placeholder}" />

        <View style="@style/Divider" />

        <include
            layout="@layout/header_pic_detail_meta"
            app:picItem="@{picItem}" />

    </LinearLayout>
</layout>